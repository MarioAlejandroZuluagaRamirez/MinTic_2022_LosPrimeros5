@page
@model SICAU.App.Frontend.Pages.ListDirectivoModel
@{
}
<h1>Listado Directivos</h1>

<form method="get">
    <p>
        Buscar por Nombres o Apellidos: 
        <input type="text" name="criterio" asp-for="criterio">
        <input type="submit" value="Buscar" class="btn btn-primary table-btn"> 
        <i class="fas fa-search"></i>
    </p>
</form>

<p></p>

<button type="button" class="btn btn-primary">
    <i class="far fa-file"></i>
    Adicionar Nuevo Registro
</button>

<p></p>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombres</th>
            <th scope="col">Apellidos</th>
            <th scope="col">Detalle</th>
            <th scope="col">Edición</th>
        </tr>
  </thead>
  <tbody>
    @foreach (var directivo in Model.directivos)
    {
        <tr>
            <td>@directivo.id</td>
            <td>@directivo.nombre</td>
            <td>@directivo.apellido</td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="/DirEntidades/DetailDirectivo" asp-route-idDirectivo="@directivo.id">
                <i class="fas fa-info-circle"></i> 
                </a>
            </td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="/DirEntidades/EditDirectivo" asp-route-idDirectivo="@directivo.id">
                <i class="far fa-address-book"></i>
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>