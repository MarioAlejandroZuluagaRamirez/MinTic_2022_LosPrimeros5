@page
@model SICAU.App.Frontend.Pages.ListSintomaModel
@{
}
<h1>Listado Sintomas</h1>

<form method="get">
    <p>
        Buscar Sintoma: 
        <input type="text" name="criterio" asp-for="criterio">
        <button type="submit" value="Buscar" class="btn btn-primary table-btn"> 
            <i class="fas fa-search"></i>
        </button>
    </p>
</form>

<p></p>

<a type="button" class="btn btn-primary" asp-page="/DirEntidades/EditSintoma">
    Adicionar Nuevo Registro
    <i class="far fa-file"></i>
</a>

<p></p>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Sintoma</th>
            <th scope="col">Edición</th>
            <th scope="col">Eliminar</th>
        </tr>
  </thead>
  <tbody>
    @foreach (var sintoma in Model.sintomas)
    {
        <tr>
            <td>@sintoma.id</td>
            <td>@sintoma.sintoma</td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="/DirEntidades/EditSintoma" asp-route-idSintoma="@sintoma.id">
                <i class="far fa-address-book"></i>
                </a>
            </td>
            <td>
                <a class="btn btn-warning table-btn" asp-page="/DirEntidades/DeleteSintoma" asp-route-idSintoma="@sintoma.id">
                <i class="far fa-trash-alt"></i>
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>