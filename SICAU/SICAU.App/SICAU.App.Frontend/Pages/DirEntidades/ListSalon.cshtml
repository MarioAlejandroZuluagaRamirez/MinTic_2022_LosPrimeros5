@page
@model SICAU.App.Frontend.Pages.ListSalonModel
@{
}
<h1>Listado Salones</h1>

<form method="get">
    <p>
        Buscar numero o Capacidad:
        <input type="text" name="criterio" asp-for="criterio">
        <button type="submit" value="Buscar" class="btn btn-primary table-btn"> 
            <i class="fas fa-search"></i>
        </button>
    </p>
</form>

<p></p>

<button type="button" class="btn btn-primary">
    <i class="far fa-file"></i>
    Adicionar Nuevo Registro
</button>

<p></p>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr class=overflow-auto>
            <th scope="col">Id</th>
            <th scope="col">Numero</th>
            <th scope="col">Capacidad</th>
            <th scope="col">Sede</th>
            <th scope="col">Horarios</th>
            <th scope="col">Edición</th>
            <th scope="col">Eliminar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var salon in Model.salones)
        {
        <tr>
            <td>@salon.id</td>
            <td>@salon.numero</td>
            <td>@salon.capacidad</td>
            <td>@salon.sede.sede</td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="/DirEntidades/ListHorario" asp-route-idSalon="@salon.id">
                <i class="fas fa-info-circle"></i> 
                </a>
            </td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="/DirEntidades/EditSalon" asp-route-idSalon="@salon.id">
                    <i class="far fa-address-book"></i>
                </a>
            </td>
            <td>
                <a class="btn btn-warning table-btn">
                <i class="far fa-trash-alt"></i>
                </a>
            </td>
        </tr>
        }
    </tbody>