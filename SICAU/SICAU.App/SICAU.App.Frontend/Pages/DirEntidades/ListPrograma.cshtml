@page
@model SICAU.App.Frontend.Pages.ListProgramaModel
@{
}
<h1>Listado Programas</h1>

<form method="get">
    <p>
        Buscar Nombre:
        <input type="text" name="criterio" asp-for="criterio">
        <button type="submit" value="Buscar" class="btn btn-primary table-btn"> 
            <i class="fas fa-search"></i>
        </button>
    </p>
</form>

<p></p>

<button type="button" class="btn btn-primary">
    <i class="far fa-file"></i>
    Adicionar Nuevo Registro
</button>

<p></p>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Programa</th>
            <th scope="col">Facultad</th>
            <th scope="col">Edición</th>
            <th scope="col">Eliminar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var programa in Model.programas)
        {
            <tr>
                <td>@programa.id</td>
                <td>@programa.programa</td>
                <td>@programa.facultad.facultad</td>
                <td>
                    <a class="btn btn-primary table-btn" asp-page="/DirEntidades/EditPrograma" asp-route-idPrograma="@programa.id">
                    <i class="far fa-address-book"></i>
                    </a>
                </td>
                <td>
                    <a class="btn btn-warning table-btn">
                    <i class="far fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>