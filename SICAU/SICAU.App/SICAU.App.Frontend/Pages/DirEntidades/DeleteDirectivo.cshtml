@page
@model SICAU.App.FrontEnd.Pages.DeleteDirectivoModel
@{
}
<h3>Eliminar Directivo</h3>

<p></p>

<tr>
    <td>
        <a class="btn btn-primary table-btn" asp-page="/DirEntidades/ListDirectivo">
        <i class="fas fa-arrow-circle-left"></i> 
            Regresar
        </a>
    </td>
</tr>

<p></p>

<table class="table table-bordered table-striped">
    <tr>
        <td class="table-dark">ID Directivo</td>
        <td>@Model.directivo.id</td>
    </tr>
    <tr>
        <td class="table-dark">Nombre Directivo</td>  
         <td>@Model.directivo.nombre</td>      
    </tr>
    <tr>
   
        <td class="table-dark">Apellido Directivo</td>
        <td>@Model.directivo.apellido</td>
    </tr>
    <tr>    
        <td class="table-dark">Identificacion Directivo</td>
        <td>@Model.directivo.identificacion</td>
    </tr>     
</table>

<p></p>

<form method="post">
    <input type="hidden" asp-for="directivo.id">
    <button type="submit" class="btn btn-primary">
        <i class="far fa-trash-alt"></i>
        Eliminar
    </button>
</form>