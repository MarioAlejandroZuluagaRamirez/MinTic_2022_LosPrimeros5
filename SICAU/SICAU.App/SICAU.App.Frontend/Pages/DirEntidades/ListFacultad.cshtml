@page
@model SICAU.App.Frontend.Pages.ListFacultadModel
@{
}
<h1>Listado Facultades</h1>

<form method="get">
    <p>
        Buscar Nombre:
        <input type="text" name="criterio" asp-for="criterio">
        <input type="submit" value="Buscar" class="btn btn-primary table-btn">
        <i class="fas fa-search"></i>
    </p>
</form>

<p></p>

<button type="button" class="btn btn-primary">
    <i class="far fa-file"></i>
    Adicionar Nuevo Registro
</button>

<p></p>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Facultad</th>
            <th scope="col">Universidad</th>
            <th scope="col">Edición</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var facultad in Model.facultades)
        {
            <tr>
                <td>@facultad.id</td>
                <td>@facultad.facultad </td>
                <td>@facultad.universidad.universidad</td>
                <td>
                    <a class="btn btn-primary table-btn" asp-page="/DirEntidades/EditFacultad" asp-route-idFacultad="@facultad.id">
                        <i class="far fa-address-book"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>