@page
@model SICAU.App.Frontend.Pages.ListUniversidadModel
@{
}
<h1>Listado Universidad</h1>

<form method="get">
    <p>
        Buscar Nombre Universidad: 
        <input type="text" name="criterio" asp-for="criterio">
        <input type="submit" value="Buscar" class="btn btn-primary table-btn"> 
        <i class="fas fa-search"></i>
    </p>
</form>

<p></p>

<button type="button" class="btn btn-primary">
    <i class="far fa-file"></i>
    Adicionar Nuevo Registro
</button>

<p></p>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Universidad</th>
            <th scope="col">Edición</th>
            <th scope="col">Eliminar</th>
        </tr>
  </thead>
  <tbody>
    @foreach (var universidad in Model.universidades)
    {
        <tr>
            <td>@universidad.id</td>
            <td>@universidad.universidad</td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="/DirEntidades/EditUniversidad" asp-route-idUniversidad="@universidad.id">
                <i class="far fa-address-book"></i>
                </a>
            </td>
            <td>
                <a class="btn btn-warning table-btn">
                <i class="far fa-trash-alt"></i>
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>